machine:
  kubelet:
    extraArgs:
      rotate-server-certificates: true
  install:
    disk: ${install_disk}
    image: ${image}
  network:
    hostname: ${hostname}

cluster:
  etcd:
    extraArgs:
      listen-metrics-urls: http://0.0.0.0:2381
  controllerManager:
    extraArgs:
      bind-address: "0.0.0.0"
  scheduler:
    extraArgs:
      bind-address: "0.0.0.0"